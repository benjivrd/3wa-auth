<%- include('./header.ejs'); %>
    <div class="container">
        <h1>Dashboard</h1>
        <p>mon email : <%= email %></p>
        <p>Nom: <%= firstName %></p>
        <p>Pr√©nom: <%= lastName %></p>
        <form action="/dashboard/reset-password" method="POST">
            <div class="form">
                <% if (errors?.length > 0) { %>
                    <% errors.forEach(err => { %>
                     <span class="error"><%= err.msg %></span>
                    <% }) %>
                   <% } %>
                <label for="password">Ancien mot de passe</label>
                <input <% errors?.forEach(err => { %>
                    <% if (err.code < 3) { %>
                        class="input-error" <% }
                        else {  %> value="<%= password %>" <% }})%>      
                  type="password" name="password" id="password"  />
                <label for="newpassword">Nouveau mot de passe</label>
                <input <% errors?.forEach(err => { %>
                    <% if (err.code === 0 || err.code === 2 || err.code === 4) { %>
                        class="input-error" <% }
                        else {  %> value="<%= newpassword %>" <% }})%>      
                  type="password" name="newpassword" id="newpassword"  />
                <label for="renewpassword">Confirmer mot de passe</label>
                <input <% errors?.forEach(err => { %>
                    <% if (err.code === 3 || err.code === 0) { %>
                        class="input-error" <% }
                        else {  %> value="<%= renewpassword %>" <% }})%>      
                  type="password" name="renewpassword" id="renewpassword"  />
                <button type="submit">Modifier le mot de passe</button>
            </div>
        </form>
    </div>
<%- include('./footer.ejs'); %>